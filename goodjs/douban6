var input_label=function(l,a){if(!("placeholder"in document.createElement("input"))){a||(a=l.parent());var e=$('<label class="label">'+l.attr("placeholder")+"</label>").prependTo(l.parent());l.attr("placeholder",""),e.click(function(){l.focus()}),l.val()&&a.addClass("inp-focus"),l.bind({focus:function(){a.addClass("inp-focus")},blur:function(){""==this.value&&a.removeClass("inp-focus")}})}};